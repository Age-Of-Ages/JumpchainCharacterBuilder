            <TabItem Header="Creatures">
                <Grid>
                    <ListView ItemsSource="{Binding CreaturesItemList}"
                              SelectedItem="{Binding ItemSelection}"
                              SelectedIndex="{Binding CreaturesItemSelectionIndex}">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="Name" Width="175"
