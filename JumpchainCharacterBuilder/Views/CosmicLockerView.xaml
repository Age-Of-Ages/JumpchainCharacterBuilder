                                    <GridViewColumn Header="Name" Width="175"
                                                    CellTemplate="{StaticResource ResourceKey=GridViewDefaultColumn}"
                                                    DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="Description" Width="445" 
                                                    CellTemplate="{StaticResource ResourceKey=GridViewLargeTextColumn}"
                                                    DisplayMemberBinding="{Binding Description}"/>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Clothing">
