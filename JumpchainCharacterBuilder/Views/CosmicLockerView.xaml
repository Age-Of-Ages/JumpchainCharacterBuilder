                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

        <GroupBox Header="Item Details" Grid.Row="1" Grid.Column="1" Background="White"
                  Visibility="{Binding ItemSelection, Converter={StaticResource NullToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="5,3,0,0">
                    <TextBlock Text="Name"/>
                    <TextBox Text="{Binding ItemSelection.Name, ValidatesOnNotifyDataErrors=True}"
                             Width="120"/>

                    <TextBlock Text="Source Jump" Margin="0,15,0,0"/>
                    <TextBox Text="{Binding ItemSelection.SourceJump}" IsReadOnly="True"
                             Width="120"/>

                    <TextBlock Text="Description" Margin="0,50,0,0"/>
                    <TextBox Text="{Binding ItemSelection.Description, ValidatesOnNotifyDataErrors=True}"
                             Width="290"
                             Height="200"
                             Style="{DynamicResource LargeTextBox}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
