            <TabItem Header="Other Items">
                <Grid>
                    <ListView ItemsSource="{Binding OtherItemList}"
                              SelectedItem="{Binding ItemSelection}"
                              SelectedIndex="{Binding OtherItemSelectionIndex}">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="Name" Width="175"
                                                    CellTemplate="{StaticResource ResourceKey=GridViewDefaultColumn}"
                                                    DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="Description" Width="445" 
                                                    CellTemplate="{StaticResource ResourceKey=GridViewLargeTextColumn}"
